
<div class="container">
  <div class="columns is-multiline is-mobile ">
    <% @house_makers.each do |house_maker| %>
      <div class="column is-half">
        <p class="card-header-title">
            <div class="card mb-6">
              <header class="card-header">
                <p class="card-header-title is-centered ">
                  <%= link_to house_maker.name, house_maker_reviews_path(house_maker) %>
                </p>
              </header>
              <div class="card-content">
                <div class="content">
                  <div class="content average-score">
                    <div class="star-rating mb-2">
                      <div class="star-rating-front" style="width: <%= house_maker.review_score_percentage %>%">★★★★★</div>
                      <div class="star-rating-back">★★★★★</div>
                    </div>
                    <div class="average-score-display ml-3 pt-2">
                      <%= house_maker.avg_score %>点（<%= house_maker.reviews.count %>件のレビュー）
                    </div>
                  </div>
                </div>
              </div>
              <footer class="card-footer">
              <%= link_to house_maker_reviews_path(house_maker), class: "button card-footer-item" do %>
              レビューを見る
              <% end %>
              <%= link_to house_maker_path(house_maker), class: "button card-footer-item" do %>
              レビューを書く
              <% end %>
              </footer>
            </div>
        </p>
      </div>
    <% end %>
  </div>
</div>

